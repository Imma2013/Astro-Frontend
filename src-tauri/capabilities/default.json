{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/llama-server",
          "sidecar": true,
          "args": [
            "--model",
            { "validator": ".+" },
            "--port",
            "8081",
            "--host",
            "127.0.0.1",
            "-c",
            "4096",
            "--n-gpu-layers",
            "99",
            "--threads",
            "16"
          ]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/llama-server",
          "sidecar": true,
          "args": [
            "--model",
            { "validator": ".+" },
            "--port",
            "8081",
            "--host",
            "127.0.0.1",
            "-c",
            "4096",
            "--n-gpu-layers",
            "99",
            "--threads",
            "16"
          ]
        }
      ]
    }
  ]
}
