{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Astro",
  "version": "2.1.1",
  "identifier": "com.astro.ide",
  "build": {
    "frontendDist": "../build/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build:app"
  },
  "app": {
    "windows": [
      {
        "title": "Astro",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/llama-server"
    ],
    "resources": [
      "bin/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
